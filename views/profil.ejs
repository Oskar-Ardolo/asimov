            <div class="row">
              <div class="col-4">
                <form method="post" action="">
                  <input type="hidden" name="idclasse" value="">
                  <div class="form-group">
                    <label for="nom">Nom</label>
                    <input type="text" id="nom" name="nom" class="form-control" value="<%= data.nom %>"><br/>
                    <label for="prenom">Pseudo</label>
                    <input type="text" id="prenom" name="prenom" class="form-control" value="<%= data.pseudo %>"><br/>
                  </div>
                </form>
              </div>
              <div class="col-4">
                <form method="post" action="">
                  <input type="hidden" name="idclasse" value="">
                  <div class="form-group">
                    <label for="nom">Prénom</label>
                    <input type="text" id="nom" name="nom" class="form-control" value="<%= data.prenom %>"><br/>
                    <label for="prenom">Rang</label>
                    <input type="text" id="prenom" name="prenom" class="form-control" value="<%= data.titre %>"><br/>
