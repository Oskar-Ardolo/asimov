              <div class="">
                <center><img style="width:50%;" src="/img/user.png"/></center>

                <button type="button" class="btn-add-file" name="button" data-toggle="modal" data-target="#addfileModal"></button>
                <!--
                -->
              </div>
            </div>
            <div class="row">
              <div style="width:100%; text-align:center">
                <b><%= data.nom +" "+ data.prenom %></b>
              </div>
            </div>
            <div class="row">
              <div style="width:100%; text-align:center">
                <i><%= data.titre %></i>
              </div>
            </div>
          </div>
          <div class="card-footer small text-muted">Mis à jour : il y a quelques secondes...</div>
        </div>
      </div>
    </div>

</div>

<!-- add avatar file modal -->
<div class="modal fade" id="addfileModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Veuillez choisir une image</h5>
        <button class="close" type="button" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">×</span>
        </button>
      </div>


      <div class="modal-body">
        <form class="" action="" method="post">
          <center>
            <label for="file" class="input_file_label">Select a file... <i>(.jpg, .png, 2Mo max)</i></label>
            <input id="file" class="input_file" type="file" accept="image/jpeg, image/png" name="" value="">
            <div id="error_file" style="visibility:hidden">
              <b><i>Le fichier est trop volumineux.</i></b>
            </div>
          </center>
        </form>
      <div class="modal-footer">
        <button class="btn btn-secondary" type="button" data-dismiss="modal">Annuler</button>
        <a class="btn btn-primary" href="">Confirmer</a>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  var input_file = document.getElementById("file");
  var error_file = document.getElementById("error_file");

  input_file.onchange = function() {
    if (this.files[0].size > 2000000) {
       error_file.setAttribute('style', 'color:red; visibility:show;');
       this.value = "";
    } else {
      error_file.setAttribute('style', 'visibility:hidden;');
    }
  };
</script>

