<% include ../include/header.ejs %>

<div id="content-wrapper">

<div class="container-fluid">
    <!-- CODE HERE -->
     <ol class="breadcrumb">
      <li class="breadcrumb-item">
        <a href="/">Accueil</a>
      </li>
      <li class="breadcrumb-item">
        <a href="/admin">Admin</a>
      </li>
      <li class="breadcrumb-item">
        <a href="/admin/profs">Gestion des professeurs</a>
      </li>
      <li class="breadcrumb-item active">ROUMANET David</li>
    </ol>

    <form method="post" action="">
      <div class="card mb-3">
        <div class="card-header">
          <i class="fas fa-users"></i>
          Gestion des professeurs : <i>Edition de l'utilisateur</i></div>
        <div class="card-body">
            <div class="row">
              <div class="col-lg-3">
                <img src="/img/user.png" alt="ROUMANET DAVID" width=300 />
              </div>
              <div class="col-lg-9">
                
                  <div class="form-group">
                    <label for="nom">Nom</label>
                    <input type="text" id="nom" name="nom" class="form-control" placeholder="Nom..." value="<%= user[0].nom %>"><br/>
                    <label for="prenom">Prénom</label>
                    <input type="text" id="prenom" name="prenom" class="form-control" value="<%= user[0].prenom %>" placeholder="Prénom...">
                  </div><br/><hr>
                  <div class="row">
                    <div class="col-lg-6 mt-3"><b>Pseudonyme : </b> <%= user[0].pseudo %></div>
                    <div class="col-lg-6 mt-3">
                      <input type="button" class="btn btn-danger" value="Réinitialiser le mot de passe">
                  </div>  
                </div>
              </div>
            </div><hr>
        </div>
        <div class="card-footer small text-muted">Mis à jour : il y a quelques secondes...</div>
      </div>
      <div class="card mb-3">
        <div class="card-header">
          <i class="fas fa-users"></i>
          Gestion des matières</div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
              <thead>
                <tr>
                  <th style="width:60%;">Matière</th>
                  <th style="width:20%;">Professeur ?</th>
                </tr>
              </thead>
              <tfoot>
                <tr>
                  <th>Matière</th>
                  <th>Professeur ?</th>
                </tr>
              </tfoot>
              <tbody>
        
                <tr>
                  <td>Mathématiques</td>
                  <td>
                    <div class="custom-control custom-checkbox">
                      <center>
                        <input type="checkbox" class="form-check-input"  name="matiere[]" value="1" style="transform : scale(2);">
                      </center>
                      
                  </div>
                  </td>
                </tr>
           
              </tbody>
            </table>
          </div>
        </div>
        <div class="card-footer small text-muted">Mis à jour : il y a quelques secondes...</div>
      </div>
      <center>
        <button type="submit" class="btn btn-success">Confirmer les modifications</button>
      </center>
      
    </form>
    <hr>

</div>
