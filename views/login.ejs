<!DOCTYPE html>
<html lang="fr">

<head>

  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">

  <title>Asimov Gestion</title>

  <!-- Custom fonts for this template-->
  <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">

  <!-- Custom styles for this template-->
  <link href="css/sb-admin.css" rel="stylesheet">

  <!-- Custom styles for notifications -->
  <link href="/notification/css/notif.css" rel="stylesheet">

</head>

<body class="bg-dark">

  <div class="container">
    <div class="card card-login mx-auto mt-5">
      <div class="card-header">Connexion</div>
      <div class="card-body">
        <form method="post" action="/login">
          <div class="form-group">
            <div class="form-label-group">
              <input type="text" name="pseudo" id="identifiant" class="form-control" placeholder="Votre identifiant" required="required" autofocus="autofocus">
              <label for="identifiant">Identifiant</label>
            </div>
          </div>
          <div class="form-group">
            <div class="form-label-group">
              <input type="password" id="inputPassword" class="form-control" name="password" placeholder="Mot de passe" required="required">
              <label for="inputPassword">Mot de passe</label>
            </div>
          </div>
          <button type="submit" class="btn btn-primary btn-block">Connexion</button>
        </form>
        <!--
          ========= TO DO =========
          FAIRE LE SYSTEME DE MOT DE PASSE OUBLIE INSHALLAH

        <div class="text-center">
          <a class="d-block small" href="forgot-password.html">Mot de passe oubli√© ?</a>
        -->
        </div>
      </div>
    </div>
  </div>

  <!-- Notification system -->
  <% try { %>
    <% if (notification.bool) {%>
      <div class="toast">
        <div class="toast-block-col1" >
          <img id="toast-img" src="/img/croix.png">
        </div>
        <div class="toast-block-col2">
          <p id="toast-message"><%= notification.message %></p>
        </div>
      </div>
    <% } %>
  <% } catch(err) { }%>

  <!-- Bootstrap core JavaScript-->
  <script src="vendor/jquery/jquery.min.js"></script>
  <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  <!-- Core plugin JavaScript-->
  <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

</body>

</html>
